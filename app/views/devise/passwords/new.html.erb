<section class="form">
  <h2>Forgot your password?</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="form__row">
    <%= f.label :login, class: "form__label" %>
  </div>
  <div class="form__row">
    <%= f.text_field :login, autofocus: true, class: "form__input" %>
  </div>

  <div class="form__row">
    <%= f.label :email, class: "form__label" %>
  </div>
  <div class="form__row">
    <%= f.email_field :email, autofocus: true, class: "form__input" %>
  </div>

  <div class="form__row">
    <%= f.submit "Send me reset password instructions", class: "form__submit" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</section>