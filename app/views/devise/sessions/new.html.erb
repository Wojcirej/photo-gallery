<section class="form">
  <h2>Log in</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form__row">
      <%= f.label :login, class: "form__label" %>
    </div>
    <div class="form__row">
      <%= f.text_field :login, autofocus: true, class: "form__input" %>
    </div>

    <div class="form__row">
      <%= f.label :password, class: "form__label" %>
    </div>
    <div class="form__row">
      <%= f.password_field :password, class: "form__input" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="form__row">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me, class: "form__label" %>
      </div>
    <% end %>

    <div class="form__row">
      <%= f.submit "Log in", class: "form__submit" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</section>