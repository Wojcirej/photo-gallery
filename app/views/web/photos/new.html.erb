<section class="form">
<h2>Add new photo</h2>
<%= form_for @photo do |form| %>

  <div class="form__row">
    <%= form.label :file, class: "form__label" %>
  </div>

  <div class="form__row">
    <%= form.file_field :file, class: "form__input" %>
  </div>

  <div class="form__row">
    <%= form.submit value: "Upload", class: "form__submit" %>
  </div>
<% end %>
</section>